// Default Card component background color.
$card-color-background = rgb(244, 246, 249)
// Stage left for desktop when closed (showing icons only).
$width-stage-left-collapsed = 4rem
// Stage left for desktop when open.
$width-stage-left-expanded = 15rem
// Header for desktop.
$height-header = 3.125rem
// Medium tap target size
$square-icon-medium = 2rem
$font-size-small = 0.75rem
$font-size-medium = 0.8125rem
$font-size-medium-a = 0.875rem
$font-size-large = 1rem
$font-size-x-large = 1.25rem
$font-size-xx-large = 1.75rem
// Unitless line-heights for reusability
$line-height-text = 1.5